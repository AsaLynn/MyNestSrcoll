<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_support_title"
        android:layout_width="198dp"
        android:layout_height="52dp"
        android:maxLines="2"
        android:text="全总组织医疗专家赴新疆 生产建设兵团义诊"
        android:textColor="#ff363636"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_support_image"
        android:layout_width="117dp"
        android:layout_height="72dp"
        android:layout_alignTop="@id/tv_support_title"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_support_source"
        android:layout_width="68dp"
        android:layout_height="17dp"
        android:layout_alignBottom="@id/iv_support_image"
        android:text="人民网 刚刚"
        android:textColor="#ffb8b8b8"
        android:textSize="12sp" />
</RelativeLayout>